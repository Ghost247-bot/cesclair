# Database Configuration
# Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Authentication Configuration
# Generate a secure random string for production (e.g., using: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here
# Optional: Override auth URL if different from site URL
BETTER_AUTH_URL=https://your-domain.com

# Site Configuration
# Your production site URL (required for auth callbacks)
# IMPORTANT: Set this to your actual production URL (e.g., https://cesclair.store)
NEXT_PUBLIC_SITE_URL=https://cesclair.store

# DocuSign Configuration (if using DocuSign integration)
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_BASE_PATH=https://na4.docusign.net
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_PRIVATE_KEY=your-docusign-private-key

